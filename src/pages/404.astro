---
import BaseLayout from '../layouts/BaseLayout.astro';
const title = 'Página no encontrada';
const description = 'La página que buscas no existe o ha sido movida.';
---

<BaseLayout title={title} description={description}>
  <main class="min-h-screen flex flex-col items-center justify-center bg-white">
    <h1 class="text-5xl font-bold text-neutral-900 mb-6">404</h1>
    <p class="text-xl text-neutral-600 mb-8">La página que buscas no existe.</p>
    <a href="/" class="px-6 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors">Volver al inicio</a>
  </main>
</BaseLayout>
