---
import { siteConfig } from '../config/site';

const projects = siteConfig.featuredProjects;
---

<section class="section">
  <div class="container">
    <div class="max-w-6xl mx-auto">
      <!-- Encabezado -->
      <div class="text-center mb-16">
        <h2 class="section-title">Proyectos Realizados</h2>
        <p class="section-subtitle">
          Ejemplos de trabajos desarrollados para diferentes sectores
        </p>
      </div>

      <!-- Grid de proyectos -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          projects.map(project => (
            <div class="group cursor-pointer no-layout-shift">
              <div class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 ease-in-out h-full">
                <!-- Placeholder con aspect ratio fijo -->
                <div class="aspect-video bg-neutral-600 relative overflow-hidden">
                  <div class="w-full h-full flex items-center justify-center">
                    <div class="w-16 h-16 bg-neutral-500 rounded-lg flex items-center justify-center">
                      <svg class="w-8 h-8 text-neutral-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                      </svg>
                    </div>
                  </div>

                  <!-- Overlay con transición mejorada -->
                  <div class="absolute inset-0 bg-neutral-700/80 opacity-0 group-hover:opacity-100 flex items-center justify-center transition-all duration-500 ease-in-out">
                    <div class="text-white text-center transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500 ease-out">
                      <div class="text-sm font-medium mb-2">Ver proyecto</div>
                      <div class="w-8 h-8 border-2 border-white rounded-full flex items-center justify-center mx-auto">
                        <span class="text-sm">→</span>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Contenido con altura mínima fija -->
                <div class="p-6 flex flex-col h-48">
                  <div class="flex items-center justify-between mb-3">
                    <span class="text-xs font-medium text-neutral-500 uppercase tracking-wide">
                      {project.category}
                    </span>
                    <div class="w-2 h-2 bg-green-500 rounded-full flex-shrink-0" />
                  </div>

                  <h3 class="text-lg font-bold text-neutral-700 mb-2 group-hover:text-neutral-900 transition-colors duration-300 line-clamp-2">
                    {project.title}
                  </h3>

                  <p class="text-neutral-600 text-sm leading-relaxed flex-1 line-clamp-3">
                    {project.description}
                  </p>
                  
                  <!-- Tecnologías utilizadas -->
                  <div class="mt-4 flex flex-wrap gap-2">
                    {project.technologies.slice(0, 3).map(tech => (
                      <span class="px-2 py-1 bg-neutral-100 text-neutral-600 text-xs rounded-full flex-shrink-0">
                        {tech}
                      </span>
                    ))}
                    {project.technologies.length > 3 && (
                      <span class="px-2 py-1 bg-neutral-100 text-neutral-600 text-xs rounded-full flex-shrink-0">
                        +{project.technologies.length - 3}
                      </span>
                    )}
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <!-- CTA -->
      <div class="text-center mt-16">
        <div class="inline-flex flex-col items-center">
          <p class="text-neutral-600 mb-4">¿Quieres ver más proyectos?</p>
          <button
            class="inline-flex items-center px-6 py-3 bg-neutral-900 text-white rounded-full hover:bg-neutral-800 transition-colors duration-300 min-h-[48px]"
          >
            Ver portfolio completo
            <span class="ml-2">→</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Prevenir layout shift con line-clamp */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Mejorar transiciones */
  .group:hover .aspect-video {
    transform: scale(1.02);
    transition: transform 0.3s ease-out;
  }

  /* Prevenir layout shift en grid */
  .grid {
    align-items: stretch;
  }

  /* Asegurar que las cards tengan la misma altura */
  .group > div {
    height: 100%;
    display: flex;
    flex-direction: column;
  }
</style>
