---
import { siteConfig } from '../config/site';

export interface Project {
  title: string;
  description: string;
  category: string;
  technologies: string[];
  slug: string;
  image: string;
}

const projects: Project[] = siteConfig.featuredProjects;
---

<section class="section">
  <div class="container mx-auto max-w-6xl">
    <header class="text-center mb-16">
      <h2 class="section-title">Proyectos Realizados</h2>
      <p class="section-subtitle">Ejemplos de trabajos desarrollados para diferentes sectores</p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <a
          href={`/projects/${project.slug}`}
          class="group block flex flex-col bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow duration-300"
          aria-label={`Ver proyecto: ${project.title}`}
        >
          <article>
            <div class="relative aspect-video overflow-hidden bg-neutral-600 group-hover:scale-105 transition-transform duration-300">
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover"
                loading="lazy"
                decoding="async"
              />
              <div class="absolute inset-0 bg-neutral-700/80 opacity-0 flex items-center justify-center transition-opacity duration-500 group-hover:opacity-100">
                <div class="text-white text-center transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
                  <span class="text-sm font-medium mb-2 block">Ver proyecto</span>
                  <span class="w-8 h-8 border-2 border-white rounded-full flex items-center justify-center mx-auto text-sm">→</span>
                </div>
              </div>
            </div>

            <div class="p-6 flex flex-col flex-1">
              <header class="flex items-center justify-between mb-3">
                <span class="text-xs font-medium text-neutral-500 uppercase tracking-wide">{project.category}</span>
                <div class="w-2 h-2 bg-green-500 rounded-full flex-shrink-0"></div>
              </header>

              <h3 class="text-lg font-bold text-neutral-700 mb-2 line-clamp-2 group-hover:text-neutral-900 transition-colors duration-300">{project.title}</h3>
              <p class="text-neutral-600 text-sm leading-relaxed flex-1 line-clamp-3">{project.description}</p>

              <div class="mt-4 flex flex-wrap gap-2">
                {project.technologies.slice(0, 3).map((tech) => (
                  <span class="px-2 py-1 bg-neutral-100 text-neutral-600 text-xs rounded-full" aria-label={`Tecnología: ${tech}`}>{tech}</span>
                ))}
                {project.technologies.length > 3 && <span class="px-2 py-1 bg-neutral-100 text-neutral-600 text-xs rounded-full" aria-label={`+${project.technologies.length - 3} tecnologías adicionales`}>+{project.technologies.length - 3}</span>}
              </div>
            </div>
          </article>
        </a>
      ))}
    </div>

    <div class="text-center mt-16">
      <p class="text-neutral-600 mb-4">¿Quieres ver más proyectos?</p>
      <a href="/portfolio" class="inline-flex items-center px-6 py-3 bg-neutral-900 text-white rounded-full hover:bg-neutral-800 transition-colors duration-300 min-h-[48px]" aria-label="Ver portfolio completo">
        Ver portfolio completo <span class="ml-2">→</span>
      </a>
    </div>
  </div>
</section>
