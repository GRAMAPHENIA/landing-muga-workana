---
export interface Props {
  name: string;
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const {
  name,
  class: className = '',
  size = 'md',
} = Astro.props;

// Mapeo de tamaños
const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-6 h-6',
  lg: 'w-8 h-8',
  xl: 'w-12 h-12',
};

// Color predeterminado #404040
const iconColor = '#404040';

// Construir clases CSS
const iconClasses = [
  sizeClasses[size],
  'inline-block',
  className,
]
  .filter(Boolean)
  .join(' ');

// Mapeo de iconos SVG
const icons = {
  // Iconos de servicios
  'globe': `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/></svg>`,
