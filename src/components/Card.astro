---
export interface Props {
  title?: string;
  class?: string;
  href?: string;
}

const { title, class: className = '', href } = Astro.props;

const cardClasses = ['card', className].join(' ');
---

{
  href ? (
    <a href={href} class={cardClasses}>
      {title && <h3 class="text-xl font-semibold text-neutral-700 mb-3">{title}</h3>}
      <slot />
    </a>
  ) : (
    <div class={cardClasses}>
      {title && <h3 class="text-xl font-semibold text-neutral-700 mb-3">{title}</h3>}
      <slot />
    </div>
  )
}
