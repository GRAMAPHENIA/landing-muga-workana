---
import Card from './Card.astro';
import { siteConfig } from '../config/site';

const testimonials = siteConfig.testimonials;
---

<section class="section bg-neutral-50">
  <div class="container">
    <div class="max-w-6xl mx-auto">
      <!-- Encabezado -->
      <div class="text-center mb-16">
        <h2 class="section-title">Testimonios</h2>
        <p class="section-subtitle">
          Opiniones de clientes que han trabajado con nosotros
        </p>
      </div>

      <!-- Grid de testimonios -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          testimonials.map(testimonial => (
            <Card class="relative">
              <div class="flex mb-4">
                {Array.from({ length: testimonial.rating }, () => (
                  <svg
                    class="w-5 h-5 text-yellow-500 fill-current"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>

              <blockquote class="text-neutral-800 mb-6 italic leading-relaxed">
                "{testimonial.content}"
              </blockquote>

              <div class="flex items-center">
                <!-- Avatar accesible -->
                <div class="w-12 h-12 rounded-full bg-neutral-600 flex items-center justify-center mr-4 shadow-sm">
                  <span class="text-white font-bold text-sm tracking-wide">
                    {testimonial.name.split(' ').map(n => n[0]).join('')}
                  </span>
                </div>
                <div>
                  <div class="font-semibold text-neutral-800">
                    {testimonial.name}
                  </div>
                  <div class="text-sm text-neutral-700">{testimonial.position}</div>
                </div>
              </div>
            </Card>
          ))
        }
      </div>

      <!-- Estadísticas adicionales -->
      <div class="mt-16 text-center">
        <div
          class="inline-flex items-center space-x-8 bg-white rounded-2xl px-8 py-6 shadow-sm"
        >
          <div class="text-center">
            <div class="text-2xl font-bold text-neutral-800">4.9/5</div>
            <div class="text-sm text-neutral-700">Valoración</div>
          </div>
          <div class="w-px h-12 bg-neutral-200"></div>
          <div class="text-center">
            <div class="text-2xl font-bold text-neutral-800">50+</div>
            <div class="text-sm text-neutral-700">Proyectos</div>
          </div>
          <div class="w-px h-12 bg-neutral-200"></div>
          <div class="text-center">
            <div class="text-2xl font-bold text-neutral-800">98%</div>
            <div class="text-sm text-neutral-700">Satisfacción</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
