---
import Button from './Button.astro';
import { siteConfig } from '../config/site';
---

<section class="hero-critical section flex items-center pt-16 lg:pt-24">
  <div class="container">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Contenido principal -->
        <div class="text-center lg:text-left">
          <!-- Título principal optimizado para LCP -->
          <h1 class="hero-title text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-700 mb-6 leading-tight">
            Desarrollo web profesional
          </h1>

          <!-- Subtítulo -->
          <p class="hero-subtitle text-xl text-neutral-600 mb-8 leading-relaxed">
            Creamos sitios web modernos y funcionales para tu empresa
          </p>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-12">
            <Button href="#contacto" variant="primary" size="lg">
              Comenzar ahora
            </Button>
            <Button href="#servicios" variant="secondary" size="lg">
              Ver servicios
            </Button>
          </div>

          <!-- Stats rápidas - Optimizadas -->
          <div class="grid grid-cols-3 gap-6 max-w-sm mx-auto lg:mx-0">
            <div class="text-center lg:text-left">
              <div class="text-2xl font-bold text-neutral-700">{siteConfig.stats.projects}</div>
              <div class="text-sm text-neutral-600">Proyectos</div>
            </div>
            <div class="text-center lg:text-left">
              <div class="text-2xl font-bold text-neutral-700">{siteConfig.stats.satisfaction}</div>
              <div class="text-sm text-neutral-600">Satisfacción</div>
            </div>
            <div class="text-center lg:text-left">
              <div class="text-2xl font-bold text-neutral-700">{siteConfig.stats.responseTime}</div>
              <div class="text-sm text-neutral-600">Respuesta</div>
            </div>
          </div>
        </div>

        <!-- Imagen optimizada para LCP -->
        <div class="relative">
          <div class="bg-neutral-100 rounded-3xl aspect-square flex items-center justify-center p-8">
            <svg
              class="w-32 h-32 text-neutral-400"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path d="M12 2L2 7L12 12L22 7L12 2Z"/>
              <path d="M2 17L12 22L22 17"/>
              <path d="M2 12L12 17L22 12"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Credibilidad simplificada -->
      <div class="mt-16 text-center">
        <p class="text-sm text-neutral-500 mb-8">Confían en nosotros</p>
        <div class="flex justify-center items-center gap-8 opacity-60">
          <div class="w-16 h-8 bg-neutral-200 rounded flex items-center justify-center">
            <div class="w-3 h-3 bg-neutral-400 rounded-full"></div>
          </div>
          <div class="w-16 h-8 bg-neutral-200 rounded flex items-center justify-center">
            <div class="w-3 h-3 bg-neutral-400 rounded-full"></div>
          </div>
          <div class="w-16 h-8 bg-neutral-200 rounded flex items-center justify-center">
            <div class="w-3 h-3 bg-neutral-400 rounded-full"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
