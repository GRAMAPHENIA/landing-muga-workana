---
import Card from './Card.astro';
import Button from './Button.astro';

const services = [
  { icon: 'globe', title: 'Desarrollo Web', description: 'Sitios web modernos y responsivos con las últimas tecnologías.', price: 'Desde 2.500€' },
  { icon: 'shopping-cart', title: 'E-commerce', description: 'Tiendas online completas con gestión de productos y pagos.', price: 'Desde 4.500€' },
  { icon: 'tablet-smartphone', title: 'Aplicaciones Web', description: 'Aplicaciones web personalizadas para tu negocio.', price: 'Desde 6.000€' },
  { icon: 'chart-no-axes-combined', title: 'SEO & Marketing', description: 'Optimización para buscadores y estrategias de marketing digital.', price: 'Desde 800€/mes' },
  { icon: 'cog', title: 'Mantenimiento', description: 'Soporte técnico y actualizaciones para tu sitio web.', price: 'Desde 200€/mes' },
  { icon: 'lightbulb', title: 'Consultoría', description: 'Asesoramiento técnico y estratégico para tu proyecto digital.', price: 'Desde 150€/hora' },
];
---

<section class="section">
  <div class="container mx-auto max-w-6xl">
    <header class="text-center mb-16 fade-section">
      <h2 class="section-title">Servicios</h2>
      <p class="section-subtitle">Soluciones web adaptadas a las necesidades de tu empresa</p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12 fade-section">
      {services.map(service => (
        <Card class="text-center">
          <div class="flex justify-center mb-4">
            <img
              src={`/icons/${service.icon}.svg`}
              alt={service.title}
              class="w-12 h-12"
              style="filter: brightness(0) saturate(100%) invert(44%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(95%) contrast(95%);"
              loading="lazy"
              decoding="async"
              fetchpriority="low"
            />
          </div>
          <h3 class="text-xl font-semibold text-neutral-700 mb-3">{service.title}</h3>
          <p class="text-neutral-600 mb-4">{service.description}</p>
          <div class="text-sm text-neutral-500 font-medium">{service.price}</div>
        </Card>
      ))}
    </div>

    <div class="text-center fade-section">
      <Button href="/servicios" variant="outline" size="lg">Ver todos los servicios</Button>
    </div>
  </div>
</section>
