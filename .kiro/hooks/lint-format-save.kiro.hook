{
  "enabled": true,
  "name": "Lint y Format al Guardar",
  "description": "Ejecuta ESLint y Prettier automáticamente en archivos modificados",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "src/**/*.{astro",
      "ts",
      "js",
      "json}"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Ejecuta pnpm lint --fix seguido de pnpm format para mantener la calidad y consistencia del código automáticamente."
  }
}