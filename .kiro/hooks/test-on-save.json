{
  "name": "Ejecutar Tests al Guardar",
  "description": "Ejecuta tests unitarios autom√°ticamente cuando se guarda un archivo de componente",
  "trigger": {
    "type": "file_save",
    "pattern": "src/**/*.{astro,ts,js}"
  },
  "actions": [
    {
      "type": "shell_command",
      "command": "pnpm test -- --run --reporter=verbose",
      "workingDirectory": "."
    }
  ],
  "enabled": true,
  "showNotification": true
}
