{
  "name": "Lint y Format al Guardar",
  "description": "Ejecuta ESLint y Prettier autom√°ticamente en archivos modificados",
  "trigger": {
    "type": "file_save",
    "pattern": "src/**/*.{astro,ts,js,json}"
  },
  "actions": [
    {
      "type": "shell_command",
      "command": "pnpm lint -- --fix",
      "workingDirectory": "."
    },
    {
      "type": "shell_command",
      "command": "pnpm format",
      "workingDirectory": "."
    }
  ],
  "enabled": true,
  "showNotification": false
}
